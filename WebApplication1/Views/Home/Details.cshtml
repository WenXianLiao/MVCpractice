@{
    ViewData["Title"] = "員工列表";
}
@model List<WebApplication1.Models.Employee>

<h2>員工列表</h2>

<div lass="row" style="width:300px;height:20px;margin:0 auto;">
    <table class="table">
        <thread>
            <tr>
                @*<th>ID</th>*@
                <th scope="col">姓名</th>
                <th scope="col">性別</th>
                <th scope="col">年紀</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                   @* <td>@item.Id</td>*@
                    <td>@item.Name</td>
                    <td>@item.Sex</td>
                    <td>@item.Year</td>
                    <td><a href="@Url.ActionLink("Edit","Home",new{id=@item.Id})">編輯</a></td>
                    <td><a href="@Url.ActionLink("Delete","Home",new{id=@item.Id})">刪除</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>